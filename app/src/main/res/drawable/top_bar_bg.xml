<?xml version="1.0" encoding="utf-8"?>

<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#CABBBBBB"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="0dp"
        android:bottom="2dp">

        <shape

            android:shape="rectangle">

            <gradient
                android:startColor="#ff8dd0b8"
                android:endColor="#ff3fd09d"
                android:angle="270" />


        </shape>
    </item>
</layer-list>