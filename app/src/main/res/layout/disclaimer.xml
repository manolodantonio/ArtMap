<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_disclaimer_dialog"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#c8299c73"
    android:padding="10dp">

        <LinearLayout
            android:id="@+id/ll_disclaimer_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_alignParentBottom="true">

            <Button
            android:id="@+id/btn_disclaimer_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/teal_base"
            android:text="@string/action_back"/>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/ll_disclaimer_buttons">

            <TextView
                android:id="@+id/tv_disclaimer_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="@color/teal_dark"
                android:textColor="#FFB5FFE7"
                android:text="@string/disclaimer_text"/>

            </ScrollView>




</RelativeLayout>