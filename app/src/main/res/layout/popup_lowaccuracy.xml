<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bg_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_popup_title"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@color/yellow_score"
        android:background="@color/teal_base"
        android:textAllCaps="true"
        android:text="@string/dialog_title_lowacc"/>

    <TextView
        android:id="@+id/tv_popup_lowacctxt"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:textColor="@color/teal_base"
        android:background="@color/bg_white"
        android:text="@string/dialog_txt_lowacc"/>

    <LinearLayout
        android:id="@+id/ll_report_send_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">


        <Button
        android:id="@+id/btn_lowacc_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:layout_marginRight="2dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@color/teal_base"
        android:text="@string/action_back"/>

        <Button
            android:id="@+id/btn_lowacc_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="2dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/teal_base"
            android:text="@string/action_send"/>

    </LinearLayout>

</LinearLayout>